{
	"name": "Data Science GPU",
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".."
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"julialang.language-julia",
				"ms-python.python",
				"ms-toolsai.jupyter"
			],
			"settings": {
				"julia.environmentPath": "/home/scientist/.julia/environments/default",
				"python.defaultInterpreterPath": "/home/scientist/miniconda3/bin/python",
				"terminal.integrated.defaultProfile.linux": "bash"
			}
		}
	},
    "runArgs": [
        "--gpus", "all"
    ],
	"forwardPorts": [8888, 6006],
	"postAttachCommand": "sudo chown -R scientist /workspaces"
}
